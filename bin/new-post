#!/bin/sh -eu

TITLE="$*"
SLUG="$(echo $TITLE | tr A-Z a-z | tr -d ',?!.' | tr -s ' :' '-')"
if [ -z "$SLUG" ]; then
  echo "cannot create a post with an empty article title."
  exit 1
fi

echo "Generating a post with the title $SLUG"
git co -b "topic/${SLUG}"

cat <<EOF > "site/posts/${SLUG}.md"
---
title: $TITLE
author: Ryan James Spencer
date:
tags:
  -
summary: >-
---
EOF

git a .
git c -m "${TITLE}"
